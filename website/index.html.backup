    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
        
        // Feature node hover and click functionality
        document.addEventListener('DOMContentLoaded', function() {
            const featureNodes = document.querySelectorAll('.feature-node');
            const featureInfo = document.getElementById('feature-info');
            const featureTitle = document.getElementById('feature-title');
            const featureDescription = document.getElementById('feature-description');
            const closeBtn = document.getElementById('close-info');
            
            const featureData = {
                pantry: {
                    title: 'Pantry Tracking',
                    description: 'Scan and track items, monitor expiration dates, and never run out of essentials again. Smart notifications keep you informed about what needs restocking.'
                },
                recipes: {
                    title: 'Recipe Recommendations',
                    description: 'Get personalized recipe suggestions based on what\'s currently in your pantry. Discover new dishes using ingredients you already have.'
                },
                shopping: {
                    title: 'Smart Shopping Lists',
                    description: 'Auto-generated shopping lists from recipes and low inventory alerts. Organize by store sections for efficient shopping trips.'
                },
                tracking: {
                    title: 'Activity Tracking',
                    description: 'Monitor your cooking habits, pantry usage, and health metrics. Gain insights into your food patterns and nutrition goals.'
                },
                sharing: {
                    title: 'Family Sharing',
                    description: 'Collaborate on meal planning and shopping with your family members. Share pantry access and coordinate household food management.'
                },
                security: {
                    title: 'Secure & Private',
                    description: 'Your data is encrypted and protected with Face ID authentication. Complete privacy with local data storage options.'
                }
            };
            
            featureNodes.forEach(node => {
                const dot = node.querySelector('.feature-dot');
                const feature = node.getAttribute('data-feature');
                
                // Hover to show info panel
                dot.addEventListener('mouseenter', function() {
                    const data = featureData[feature];
                    featureTitle.textContent = data.title;
                    featureDescription.textContent = data.description;
                    
                    // Position on right or left based on feature location
                    if (feature === 'sharing' || feature === 'security') {
                        featureInfo.classList.add('left');
                    } else {
                        featureInfo.classList.remove('left');
                    }
                    
                    featureInfo.classList.add('show');
                    node.classList.add('active');
                });
                
                // Keep info visible when hovering over the info panel
                featureInfo.addEventListener('mouseenter', function() {
                    featureInfo.classList.add('show');
                });
                
                // Hide info when leaving both dot and panel
                dot.addEventListener('mouseleave', function() {
                    setTimeout(() => {
                        if (!featureInfo.matches(':hover') && !dot.matches(':hover')) {
                            featureInfo.classList.remove('show');
                            node.classList.remove('active');
                        }
                    }, 100);
                });
                
                featureInfo.addEventListener('mouseleave', function() {
                    featureInfo.classList.remove('show');
                    document.querySelectorAll('.feature-node').forEach(n => {
                        n.classList.remove('active');
                    });
                });
                
                // Click functionality
                dot.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const data = featureData[feature];
                    featureTitle.textContent = data.title;
                    featureDescription.textContent = data.description;
                    
                    // Position on right or left based on feature location
                    if (feature === 'sharing' || feature === 'security') {
                        featureInfo.classList.add('left');
                    } else {
                        featureInfo.classList.remove('left');
                    }
                    
                    featureInfo.classList.add('show');
                    node.classList.add('active');
                });
            });
            
            // Close button functionality
            closeBtn.addEventListener('click', function() {
                featureInfo.classList.remove('show');
                document.querySelectorAll('.feature-node').forEach(n => {
                    n.classList.remove('active');
                });
            });
            
            // Close when clicking outside
            document.addEventListener('click', function(e) {
                if (!e.target.closest('.feature-node') && !e.target.closest('.feature-info')) {
                    featureInfo.classList.remove('show');
                    document.querySelectorAll('.feature-node').forEach(n => {
                        n.classList.remove('active');
                    });
                }
            });
        });
    </script>
